{{#> layout}}
{{#*inline "head"}}
<title>{{ t "settings.title" }} - {{@websiteName}}</title>
{{/inline}}
{{#*inline "body"}}
{{> navbar}}
<div class="container">

{{#if error}}
<div class="alert alert-danger" role="alert">
    {{error}}
</div>
{{/if}}

<form method="post" action="/settings">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <div class="form-group">
        <label for="name">
            {{ @t "settings.name" }}
        </label>
        <input type="text" minlength="3" maxlength="30" required name="name" class="form-control" id="name" placeholder="Μορφεύς" value="{{user.name}}">
    </div>
    <button type="submit" class="btn btn-primary">
        {{ @t "settings.submit_button" }}
    </button>
</form>

<hr/>

{{#if enabledFacebook}}
{{#if user.facebookId}}
<div class="alert alert-success">
<strong> {{ t "settings.facebook_login.connected" }}</strong>
<form method="post" action="/disconnect/facebook">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <button type="submit" class="btn btn-outline-danger btn-sm mt-3">{{ t "settings.facebook_login.disconnect" }}</button>
</form>
</div>
{{else}}
<div class="alert alert-info">
<a class="btn btn-primary" href="/connect/facebook">{{ t "settings.facebook_login.header" }}</a>
<strong> {{ t "settings.facebook_login.info" }} </strong>
    {{ t "settings.facebook_login.info2" }}
</div>
{{/if}}
{{else}}
<div class="small text-muted">
    {{ t "settings.facebook_login.disabled" }}
</div>
{{/if}}

{{#if enabledGoogle}}
{{#if user.googleId}}
<div class="alert alert-success">
    <strong> {{ t "settings.google_login.connected" }}</strong>
<form method="post" action="/disconnect/google">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <button type="submit" class="btn btn-outline-danger btn-sm mt-3">{{ t "settings.google_login.disconnect" }}</button>
</form>
</div>
{{else}}
<div class="alert alert-info">
<a class="btn btn-primary" href="/connect/google">{{ t "settings.google_login.header" }}</a>
    <strong> {{ t "settings.google_login.info" }} </strong>
    {{ t "settings.google_login.info2" }}
</div>
{{/if}}
{{else}}
<div class="small text-muted">
    {{ t "settings.google_login.disabled" }}
</div>
{{/if}}

</div>
{{/inline}}
{{/layout}}
